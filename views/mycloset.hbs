{{log outfits}}
<div id="grid-container">
    <div id="sidebar" class="ui red left demo vertical inverted visible  sidebar labeled icon menu">
        <a class="item">
            <img id="home_logo" class="center" src="img/image.png" height: "20px" width:"20px">
        </a>
        <a href="/home" class="item">
            <i class="home icon"></i>
            Home
        </a>
        <a class="item">
            <i class="block layout icon"></i>
            My Closet
        </a>
        <a href="/fits" class="item">
            <i class=" theme icon"></i>
            Fits
        </a>
        <a href="/celebfits" class="item">
            <i class="diamond icon" class="fits"></i>
            Celeb Fits
        </a>
    </div>
    <div id="content">
        <h1>
            <font size="8">My Closet</font>
        </h1>
    </div>

    <div class="ui container">
        {{#each outfits}}
        <div class="ui centered three column grid">
                <div class="ui segment" id="segment">
                    <div class="image">
                        <img class="fit-image" src="/img/{{this.shirt.image}}">
                    </div>
                    <div class="content">
                        <a class="header">{{this.shirt.name}}</a>
                    </div>
                </div>
                <div class="ui segment" id="segment">
                    <div class="image">
                        <img class="fit-image" src="/img/{{this.pants.image}}">
                    </div>
                    <div class="content">
                        <a class="header">{{this.pants.name}}</a>
                    </div>
                </div>

                <div class="ui segment" id="segment">
                    <div class="image">
                        <img class="fit-image" src="/img/{{this.shoes.image}}">
                    </div>
                    <div class="content">
                        <a class="header">{{this.shoes.name}}</a>
                    </div>
                </div>

        </div>
        {{/each}}
    </div>

